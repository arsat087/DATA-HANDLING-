#20
# Load libraries
library(lubridate)
library(ggplot2)

# Create a data frame
activity_data <- data.frame(
  Date = as.Date(c("2023-01-01", "2023-01-02", "2023-01-03", "2023-01-04", "2023-01-05")),
  Count = c(10, 12, 15, 8, 20)
)

# Add weekday and week of year columns
activity_data$Weekday <- wday(activity_data$Date, label = TRUE)  # Day of week
activity_data$Week <- week(activity_data$Date)                    # Week of year

# Plot calendar heatmap
ggplot(activity_data, aes(x = Weekday, y = Week, fill = Count)) +
  geom_tile(color = "white") +
  scale_fill_gradient(low = "lightblue", high = "darkblue") +
  labs(
    title = "Daily Activity Calendar Heatmap",
    x = "Weekday",
    y = "Week of Year",
    fill = "Activity Count"
  ) +
  theme_minimal()
