#14
#library(ggplot2)

# Data
sales_campaign_data <- data.frame(
  Product = c("A", "B", "C", "D", "E"),
  Before = c(200, 300, 400, 500, 600),
  After = c(250, 350, 450, 550, 650)
)

# Dumbbell-like plot using ggplot2
ggplot(sales_campaign_data, aes(y = Product)) +
  geom_segment(aes(x = Before, xend = After, yend = Product), color = "gray", size = 1.5) +
  geom_point(aes(x = Before), color = "red", size = 3) +
  geom_point(aes(x = After), color = "green", size = 3) +
  labs(
    title = "Sales Before and After Campaign",
    x = "Sales",
    y = "Product"
  ) +
  theme_minimal()
