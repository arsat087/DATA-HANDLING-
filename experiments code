#13
# Load libraries
# Load library
library(ggplot2)

# Sample dataset: exam scores in 3 subjects
set.seed(123)
data <- data.frame(
  Score = c(rnorm(50, 70, 10), rnorm(50, 60, 12), rnorm(50, 80, 8)),
  Subject = factor(rep(c("Math", "Science", "English"), each = 50))
)

# Overlapping density plot to mimic ridgeline
ggplot(data, aes(x = Score, y = ..density.., fill = Subject)) +
  geom_density(alpha = 0.5) +
  facet_wrap(~ Subject, ncol = 1, scales = "free_y") +
  labs(
    title = "Distribution of Exam Scores by Subject",
    x = "Score",
    y = "Density"
  ) +
  theme_minimal()
