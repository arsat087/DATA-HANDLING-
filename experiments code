# Install hexbin package if not installed
install.packages("hexbin")

# Load libraries
library(ggplot2)
library(hexbin)

# Create a data frame
xy_data <- data.frame(
  X = c(1, 2, 3, 4, 5, 6, 7, 8),
  Y = c(2, 3, 4, 5, 6, 7, 8, 9)
)

# Plot hexbin plot
ggplot(xy_data, aes(x = X, y = Y)) +
  geom_hex() +
  labs(
    title = "Hexbin Plot",
    x = "X",
    y = "Y"
  ) +
  theme_minimal()
